{
  "name": "solid-logic",
  "type": "module",
  "version": "3.0.9",
  "description": "Core business logic of SolidOS",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib src/versionInfo.ts",
    "build": "npm run clean && npm run build-types && npm run build-version && rollup -c",
    "build-version": "./timestamp.sh > src/versionInfo.ts  && eslint 'src/versionInfo.ts' --fix",
    "build-types": "tsc --emitDeclarationOnly",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --noEmit -p tsconfig.test.json",
    "test": "jest",
    "test-debug": "node --inspect-brk ./node_modules/.bin/jest -i --env jest-environment-node-debug",
    "prepublishOnly": "npm run build && npm run test",
    "preversion": "npm run lint && npm run typecheck && npm test",
    "postversion": "git push --follow-tags",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solidos/solid-logic.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/solidos/solid-logic/issues"
  },
  "homepage": "https://github.com/solidos/solid-logic#readme",
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-async-to-generator": "^7.27.1",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-optional-chaining": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "babel-loader": "^10.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jest-environment-node-debug": "^2.0.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^16.1.5",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-loader": "^9.5.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@inrupt/solid-client-authn-browser": "1.17",
    "rdflib": "^2.2.37",
    "solid-namespace": "^0.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
